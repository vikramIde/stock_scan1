<?xml version='1.0' encoding='utf-8'?>
<widget id="stock.scan.nanocorp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <icon src="res/icon/icon.png" />
    <name>Stock Scan</name>
    <description>
        A sample application to help user scan bar/qr code.
    </description>
    <author email="vikrambanand@gmail.com" href="http://nanocorporation.co.uk">
        Vikram and  Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^6.0.7">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="To scan barcodes" />
    </plugin>
</widget>
